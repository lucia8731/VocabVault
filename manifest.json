{
    "manifest_version": 3, 
    "name": "VocabVault",
    "version": "1.0",
    "description": "Save the word and definitions to Google Sheets and Anki.",
    "permissions": [
        "contextMenus",
        "activeTab",
        "scripting",
        "storage"
    ],
    "beckground": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    }
}